.user-sidebar
  .user-sidebar__inner
    .user-sidebar__top.hidden-smMinus
      a(href="/").user-sidebar__logo
        img(src="/img/logo.svg" title="Workium")
    .buttons.user-sidebar__buttons
      ul.buttons__list
        li.buttons__item
          a(href="#authorization-popup" data-active-tab-number="2").btn-blue.buttons__btn.fancybox-popup-toggle Увійти
        li.buttons__item
          a(href="#authorization-popup").btn-blue.buttons__btn.fancybox-popup-toggle Зареєструватись
    .user-sidebar__user-info-wrapper
      .user-info
        img(src="/img/user_sidebar_avatar.png" alt="Sobat Jariyah").user-avatar.user-info__avatar
        .user-info__text-wrapper
          a(href="/user.html").username.user-info__username Sobat Jariyah
          .user-label.user-info__user-label Впливовість: 0
        a(href="#user-context-menu" data-context-block-trigger).dots-link
    .user-menu.user-sidebar__user-menu
      ul.user-menu__list
        li.user-menu__item
          a(href="/vacancies.html").user-menu__link
            img(src="/img/user_menu/vacancies.svg" alt="Вакансії").user-menu__icon
            span.user-menu__item-text Вакансії
        li.user-menu__item
          a(href="/recruitment.html").user-menu__link.user-menu__link--has-count
            img(src="/img/user_menu/recruitment.svg" alt="Рекрутація").user-menu__icon
            span.user-menu__item-text Клієнти
            span.count.user-menu__count 3
        li.user-menu__item
          a(href="/docs.html").user-menu__link
            img(src="/img/user_menu/documents.svg" alt="Документи").user-menu__icon
            span.user-menu__item-text Документи
        li.user-menu__item
          a(href="#operations-popup-guest").user-menu__link.fancybox-wide-popup-toggle
            img(src="/img/user_menu/balance.svg" alt="Баланс та операції").user-menu__icon
            span.user-menu__item-text Баланс та операції
        li.user-menu__item
          a(href="#affiliate-popup-guest").user-menu__link.fancybox-wide-popup-toggle
            img(src="/img/user_menu/affiliate.svg" alt="Партнерська програма").user-menu__icon
            span.user-menu__item-text Партнерська програма
        li.user-menu__item
          a(href="#save-popup-guest").user-menu__link.fancybox-wide-popup-toggle
            img(src="/img/user_menu/save.svg" alt="Збереження").user-menu__icon.user-menu__icon--save
            span.user-menu__item-text Збереження
        li.user-menu__item
          a(href="#awards-popup-guest").user-menu__link.user-menu__link--has-count.fancybox-wide-popup-toggle
            img(src="/img/user_menu/achievements.svg" alt="Досягнення").user-menu__icon
            span.user-menu__item-text Досягнення
            span.count.user-menu__count 3
        li.user-menu__item
          a(href="#verification-popup-guest").user-menu__link.fancybox-wide-popup-toggle
            img(src="/img/user_menu/verification.svg" alt="Верифікація").user-menu__icon
            span.user-menu__item-text Верифікація
        li.user-menu__item
          a(href="#black-list-popup-guest").user-menu__link.fancybox-wide-popup-toggle
            img(src="/img/user_menu/black_list.svg" alt="Чорний список").user-menu__icon
            span.user-menu__item-text Чорний список
        li.user-menu__item
          a(href="/ideas.html").user-menu__link
            img(src="/img/user_menu/ideas.svg" alt="Ідеї та пропозиції").user-menu__icon
            span.user-menu__item-text Ідеї та пропозиції
        li.user-menu__item
          a(href="#settings-popup-guest").user-menu__link.fancybox-wide-popup-toggle
            img(src="/img/user_menu/settings.svg" alt="Налаштування").user-menu__icon
            span.user-menu__item-text Налаштування
