doctype html
block vars
html(lang="uk")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    //- meta(name='description' content='')
    title Workium
    link(href="/img/favicon.png", rel="icon", type="image/png")
    link(href="/css/vendor.css", rel="stylesheet")
    link(href="/css/styles.css", rel="stylesheet")
    script(src="/js/vendor.js", defer="")
    script(src="/js/app.js", defer="")
    script(src="/js/profile.js", defer="")
  body
    .wrapper.wrapper--user-profile
      include ../includes/blocks/mobile-header
      include ../includes/blocks/share-popup
      include ../includes/blocks/mobile-support-popup
      include ../includes/blocks/mobile-support-popup-extended
      include ../includes/blocks/profile-menu-popup
      include ../includes/blocks/profile-submenu-popup
      include ../includes/blocks/mobile-user-profile
      include ../includes/blocks/closed-save-section
      include ../includes/blocks/closed-affiliate-program
      include ../includes/blocks/closed-achievements
      include ../includes/blocks/closed-balance
      include ../includes/blocks/closed-verification
      include ../includes/blocks/closed-black-list
      include ../includes/blocks/closed-settings
      
      .user-profile(class=userProfileClasses)
        include ../includes/blocks/user-sidebar

        .user-profile__main
          .user-profile__main-inner
            block content

      include ../includes/blocks/authorization-popup

    include ../includes/blocks/icon-menu

    block page_bottom

    script(src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.6.0/dist/confetti.browser.min.js")