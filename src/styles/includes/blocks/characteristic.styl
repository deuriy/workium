.characteristic
	display grid
	grid-template-columns auto 1fr
	align-items center
	gap 12px
	font-size 13px
	// line-height 22px
	line-height 1.692
	color var(--text-color)
	
	@media $xs
		gap 8px
		font-size 15px
	
	&::before
		content ""
		width 16px
		height 16px
		background-position center
		background-repeat no-repeat
	
	&__value
		white-space nowrap
		overflow hidden
		text-overflow ellipsis
	
