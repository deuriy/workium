.user-sidebar
	width 280px
	height 100%
	background var(--accent)
	// overflow auto
	@extend .transition
	
	@media $smMinus
		position fixed
		z-index 10
		top 56px
		left -280px
		height calc(100% - 56px)
	
	&__inner
		position sticky
		top 0
	
	&__top
		display grid
		grid-template-columns repeat(2, auto)
		justify-content space-between
		align-items center
		padding 28px 32px 8px
	
	&__user-info
		@media $smPlus
			display none
	
	&__user-menu
		padding 12px 11px 20px
	
	&--opened
		left 0
		width 100%