.recruit-card
	padding 24px 32px
	border-radius 12px
	background var(--light)
	
	@media $xs
		padding 20px 24px
	
	@media $xxs
		padding 16px 16px 24px
	
	&__header
		display grid
		grid-template-columns repeat(2, auto)
		justify-content space-between
		align-items center
		gap 20px
		margin-bottom 24px
		
		@media $xxs
			margin-bottom 16px
	
	&__id-and-comment
		@media $xxs
			margin-top 16px
		
		@media $xxsPlus
			margin-top -3px
			margin-right 3px
			text-align right
	
	&__name,
	&__phone
		@media $xxs
			font-size 16px
			line-height 1.625
	
	&__name
		font-weight 600
	
	&__phone
		color var(--accent)
		text-decoration none
	
	&__id,
	&__comment,
		color var(--grey)
		font-size 13px
		line-height 1.6923
	
	&__specifications
		display grid
		grid-template-columns repeat(6, auto)
		gap 32px
		margin-right -5px
		
		@media $smMinus
			grid-template-columns repeat(3, auto)
			gap 24px
		
		@media $smPlus
			margin-bottom 35px
		
		@media $xxs
			grid-template-columns repeat(2, auto)
			gap 16px 31px
	
	&__specification
		@media $md
			position relative
			padding-left 16px
		
			&:not(:first-child)::before
				content ""
				position absolute
				top 0
				bottom 0
				left 0
				width 1px
				height 32px
				margin auto
				background var(--grey-medium)
		
			&:first-child
				padding-left 0
	
	&__status-btn
		margin-top 16px