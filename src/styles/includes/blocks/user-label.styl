.user-label
	display inline-grid
	grid-template-columns 100%
	align-items center
	gap 5px
	padding 3px 9px 2px
	border none
	outline none
	border-radius 12px
	background #2A364C
	color #fff
	font-size 13px
	text-decoration none
	@extend .transition
	
	&:hover
		background lighten(#2A364C, 10%)
	
	&__number
		// font-size 16px
		font-size 22px
		
		@media $425-
			font-size 19px
	
	&--mobile
		// gap 6px
		gap 12px
		justify-items start
		// padding 7px 15px
		padding 10px 19px
		// font-size 12px
		// font-size 16.6px
		font-size 16px
		
		@media $425-
			gap 8px
			padding 8px 14px
			font-size 14px
	
	&--influence,
	&--awards,
	&--affiliate,
	&--copy-partner-link,
	&--settings,
	&--logout
		grid-template-columns auto 1fr
	
	&--influence
		&::before
			content ""
			// width 10px
			// height 14px
			width 0.76923em
			height 1.07692em
