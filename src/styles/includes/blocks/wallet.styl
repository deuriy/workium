.wallet
	display grid
	justify-items center
	padding 6px 28px 0
	max-width 280px
	background var(--light)
	border-radius 25px
	
	@media $1440-
		padding-right 18px
		padding-left 18px
		border-radius 20px
	
	&__currency
		justify-self end
		
		@media $1440-
			font-size 14px
	
	&__sum
		margin-top 18px
		margin-bottom 33px
		font-size 55px
		line-height normal
		
		@media $1440-
			font-size 42px
	
	&__currency-prefix
		font-weight 400
		font-size 33px
		
		@media $1440-
			font-size 28px
	
	&__operation-link
		margin-bottom -14px
	
	&__selected
		display inline-grid
		width 160px
		max-width 100%
		margin 0 -20px -14px
		padding 3px 27px
		background var(--black)
		border-radius 10px
		color var(--light)
		text-align center
		text-decoration none
		@extend .transition

		@media $1440-
			font-size 14px
	
	&--active
		padding 3px 24px 0
		border 3px solid var(--black)