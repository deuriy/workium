.rating-line
	@media $smPlus
		width 463px
		max-width 100%
	
	&__line
		height 13px
		border-radius 4px
		background #EBE9F0
	
	&__line-inner
		height 100%
		border-radius 4px
		background-image linear-gradient(to right, #f29624, #ffc10d)
		@extend .transition
	
	&__numbers
		display grid
		grid-template-columns repeat(2, auto)
		justify-content space-between
		margin-top 1px
		margin-right -7px
		font-size 12px