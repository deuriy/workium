	// 	top 0
	// 	right 13px
	// 	bottom 0
	// 	margin auto
	
	&--support,
	&--mobile-support,
	&--affiliate-support
		.contact-phones__list
			display grid
			
		.contact-phones__item
			display grid
			justify-content space-between
			align-items center
			margin-right 13px
			
			& + .contact-phones__item
				margin-top 15px
	
	&--support,
	&--affiliate-support
		.contact-phones__item
			grid-template-columns 240px auto
	
	&--mobile-support
		width 353px
		max-width 100%
		
		.contact-phones__item
			grid-template-columns 258px auto
			margin-right 7px
	
	&--affiliate-support
		width 336px
		max-width 100%
	
	&--order-service
		.contact-phones__list
			gap 4px
		
		.contact-phones__item
			display grid
			grid-template-columns 1fr auto
			align-items center
			gap 12px
	
	&--two-col
		.contact-phones__list
			display grid
			grid-template-columns repeat(2, auto)
			gap 12px 24px
			
			@media $xs
				gap 10px 16px
			
			@media $xxs
				display inline-grid
				grid-template-columns 100%
		
		.contact-phones__item
			& + .contact-phones__item
				margin-top 0
	
	&--center
		.contact-phones__list
			justify-content center