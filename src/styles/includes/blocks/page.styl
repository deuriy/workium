.page
	&__title
		margin-bottom 40px
		
		@media $smMinus
			margin-bottom 30px
		
		@media $xs
			margin-bottom 20px
	
	&__tabs-menu
		margin-bottom 40px
		
		@media $mdMinus
			margin-bottom 25px
		
		@media $smMinus
			margin-bottom 20px
		
		@media $xs
			margin-bottom 15px
	
	// &__subtitle
	// 	margin-bottom 10px
		
	&__content
		padding 40px 35px
		border-radius 13px
		background var(--light)
		
		@media $smMinus
			padding 30px
		
		@media $xs
			padding 20px
	
	&__content-inner
		width 1000px
		max-width 100%
		margin-right auto
		margin-left auto
	
	&__text-wrapper
		// font-weight 400
		
		p
			// margin-bottom 15px
			margin-bottom 18px
			line-height normal
			
			a
				color var(--light-blue)
				text-decoration none
			
			&:last-child
				margin-bottom 0
	
	&__large-text
		margin-bottom 36px
		font-size 16px
		
		@media $xs
			margin-bottom 24px
	
	&__img-wrapper
		// margin-bottom 35px
		margin-bottom 27px
		text-align center
		
		@media $smMinus
			margin-bottom 30px
		
		@media $xs
			margin-bottom 25px
	
	&__img
		vertical-align middle
	
	&__checkmark-icon
		position relative
		top 6px
	
	&__text-subtitle
		// margin-top 35px
		// margin-bottom 30px
		// font-weight 500
		// font-size 16px
		margin-top 27px
		margin-bottom 22px
		font-size 25px
		line-height normal
		text-align center
		
		@media $smMinus
			margin-top 30px
			margin-bottom 25px
		
		@media $xs
			margin-top 20px
			margin-bottom 20px
	
	&__bookmark-icon
		margin-top -3px
		margin-left 5px
		vertical-align middle
	
	&__contact-buttons
		margin-top 50px
		
		@media $smMinus
			margin-top 35px
		
		@media $xs
			margin-top 20px
	
	&--clients
		.page__title
			margin-bottom 33px
			
			@media $smMinus
				margin-bottom 20px
			
			@media $xs
				margin-bottom 10px
			
		.page__text-wrapper
			p
				a
					color var(--info)
	
	&--success-verification
		.page__content
			padding-right 48px
			padding-left 48px
			
			@media $smMinus
				padding-right 30px
				padding-left 30px
				
			@media $xs
				padding-right 20px
				padding-left 20px
			
		.page__title
			margin-bottom 23px
		
		.page__img-wrapper
			margin-bottom 34px
		
		.page__text-wrapper
			p
				margin-bottom 5px
				line-height 1.6
				
				&:last-child
					margin-bottom 0
	
