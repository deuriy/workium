.agency-fee
	display grid
	grid-template-columns 100px 1fr
	border 1px solid #dfe1ed
	border-radius 10px
	background var(--light)
	
	@media $xs
		grid-template-columns 100%
	
	&__img-wrapper
		display grid
		grid-template-columns 100%
		place-items center
		background #F0F1F4
	
	&__img
		vertical-align middle
		max-width none
	
	&__text-wrapper
		padding 27px 40px 20px
		
		@media $xs
			padding 20px 25px
	
	&__title
		margin-bottom 18px
		font-weight 600
		font-size 20px
		line-height 1.2
		
		@media $xs
			margin-bottom 15px
			font-size 18px
	
	&__text
		color #595D72
		font-size 14px
		line-height normal
		
		& > p
			& + p
				margin-top 16px