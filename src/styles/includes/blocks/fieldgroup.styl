.fieldgroup
	padding 23px
	border 1px solid var(--light-grey)
	border-radius 12px
	background var(--light)
	
	@media $xs
		padding 16px
	
	&__inner
		max-width 578px 
	
	&__row
		display grid
		grid-template-columns repeat(auto-fit, minmax(240px, auto))
		// grid-template-columns repeat(2, 1fr)
		gap 20px
		margin-bottom 20px
		
		&:last-child
			margin-bottom 0
			
		&--align-items-end
			align-items end