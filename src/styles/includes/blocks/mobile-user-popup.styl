.mobile-user-popup
	background #101728
	color var(--light)
	
	&__header
		display grid
		grid-template-columns 100%
		margin 0 18px 6px
		
		&--menu
			margin-bottom 38px
		
		&--submenu
			margin 0 10px 52px
		
		&--support
			grid-template-columns repeat(2, auto)
			justify-content start
			gap 17px
			margin 7px 6px 20px
		
		&--closed-section
			margin-right 50px
			margin-left 10px
	
	&__title
		font-weight 500
		font-size 24px
		
		&--support
			display grid
			grid-template-columns 1fr auto
			gap 3px
			margin-top -5px
			font-size 20px
			white-space nowrap
			
			&::after
				content ""
				width 8px
				height 8px
				margin-top 5px
				border-radius 50%
				background #38CA16
		
		&--closed-section
			font-size 21px
	
	&__avatar
		margin 0 auto 2px
	
	&__user-info
		text-align center
	
	&__username
		margin-bottom 2px
		margin-left 15px
		font-size 24px
		line-height normal
		
		&--online
			display grid
			grid-template-columns auto auto
			justify-content center
			
			&::after
				content ""
				width 7px
				height 7px
				position relative
				top 3px
				left 3px
				border-radius 50%
				background #38CA16
	
	&__id
		margin-bottom 32px
		margin-left 7px
		color #797D87
		font-size 15px
	
	&__user-labels
		margin-bottom 32px
	
	&__user-menu
		margin-bottom 60px
	
	&__user-submenu
		// margin 0 37px 50px
		margin 0 37px 32px
	
	&__contact-box
		// margin-bottom 57px
		width 414px
		max-width 100%
		margin 0 auto 57px
	
	&__buttons
		display flex
		justify-content center
		gap 18px
		margin 0 10px
	
		&--closed-section
			margin 0 30px 0 18px