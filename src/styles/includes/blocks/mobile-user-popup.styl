.mobile-user-popup
	background #101728
	color var(--light)
	
	&__header
		display grid
		grid-template-columns 100%
		margin 0 18px 6px
		
		@media $425-
			margin-bottom 15px
		
		&--menu
			margin-bottom 38px
		
		&--submenu
			margin 0 10px 52px
			
			@media $425-
				margin-bottom 25px
		
		&--support
			grid-template-columns repeat(2, auto)
			justify-content start
			gap 20px
			margin 12px 10px 20px
			
			@media $425-
				gap 17px
				margin 7px 6px 20px
		
		&--closed-section
			margin-top 4px
			margin-left 13px
			
			@media $425-
				margin-top 0
				margin-right 50px
				margin-left 10px
	
	&__icon
		width 33px
		
		@media $425-
			width 28px
	
	&__title
		font-weight 500
		font-size 24px
		
		&--support
			display grid
			grid-template-columns 1fr auto
			gap 3px
			margin-top -7px
			font-size 24px
			white-space nowrap
			
			@media $425-
				margin-top -5px
				font-size 20px
			
			&::after
				content ""
				width 9px
				height 9px
				margin-top 7px
				border-radius 50%
				background #38CA16
				
				@media $425-
					width 8px
					height 8px
					margin-top 5px
		
		&--closed-section
			font-size 21px
	
	&__avatar
		margin 0 auto 2px
	
	&__user-info
		text-align center
	
	&__username
		margin-bottom 2px
		margin-left 15px
		font-size 24px
		line-height normal
		
		@media $425-
			margin-left 0
			font-size 20px
		
		&--online
			display grid
			grid-template-columns auto auto
			justify-content center
			
			&::after
				content ""
				width 7px
				height 7px
				position relative
				top 3px
				left 3px
				border-radius 50%
				background #38CA16
	
	&__id
		margin-bottom 32px
		margin-left 7px
		color #797D87
		font-size 15px
		
		@media $425-
			margin-bottom 24px
			margin-left 0
			font-size 13px
	
	&__user-labels
		margin-bottom 32px
	
	&__user-menu
		margin-bottom 60px
	
	&__user-submenu
		// margin 0 37px 50px
		margin 0 37px 32px
		
		@media $425-
			margin 0 20px 30px
	
	&__contact-box
		// margin-bottom 57px
		width 414px
		max-width 100%
		margin 0 auto 57px
	
	&__buttons
		display flex
		justify-content center
		gap 18px
		margin 0 10px
	
		&--closed-section
			// margin 0 30px 0 18px
			margin 0 16px 0 13px
			
			@media $425-
				gap 12px
				margin 0 10px
	
	&__support-box
		margin 43px 12px
		
		@media $425-
			margin 35px 8px