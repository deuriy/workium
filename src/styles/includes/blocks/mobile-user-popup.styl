.mobile-user-popup
	// position fixed
	// z-index 100
	// top 0
	// left 0
	// width 100%
	// height 100%
	background #101728
	color var(--light)
	
	&__header
		margin 0 18px 6px
		
		&--menu
			margin-bottom 38px
		
		&--support
			display grid
			grid-template-columns repeat(2, auto)
			justify-content start
			gap 17px
			margin 7px 6px 20px
	
	&__title
		// margin 0 18px 6px
		font-weight 500
		font-size 24px
		
		&--support
			// position relative
			display grid
			grid-template-columns 1fr auto
			gap 8px
			margin-top -5px
			font-size 20px
			white-space nowrap
			
			&::after
				content ""
				width 8px
				height 8px
				// margin-top -19px
				// margin-left -7px
				border-radius 50%
				background #38CA16
	
	&__avatar
		// margin 0 auto 5px
		margin 0 auto 2px
		// margin 0 auto 7px
		// margin 0 auto 7px
	
	&__user-info
		text-align center
	
	&__username
		// margin-bottom 1px
		margin-bottom 2px
		// margin-left 5px
		margin-left 15px
		// font-size 18px
		font-size 24px
		line-height normal
		
		&--online
			display grid
			grid-template-columns auto auto
			justify-content center
			
			&::after
				content ""
				width 7px
				height 7px
				position relative
				top 3px
				left 3px
				// width 6px
				// height 6px
				border-radius 50%
				background #38CA16
	
	&__id
		// margin-bottom 25px
		margin-bottom 32px
		margin-left 7px
		color #797D87
		// font-size 11px
		font-size 15px
	
	&__user-labels,
	&__user-menu
		// margin-bottom 40px
		margin-bottom 60px
	
	&__contact-box
		// margin-bottom 48px
		margin-bottom 20px
	
	&__close-btn-wrapper
		text-align center