.switch
  position relative
  display inline-block
  width 36px
  height 20px
  
  &__input
    opacity 0
    width 0
    height 0
    
    &:checked + .switch__slider
      background-color #33B324
      
      &::before
        transform translateX(16px)
  
  &__slider
    position absolute
    cursor pointer
    top 0
    left 0
    right 0
    bottom 0
    border-radius 10px
    background-color #DFE1ED
    box-shadow 0 2px 3px 0 rgba(0, 0, 0, 0.05) inset
    @extend .transition
    
    &::before
      content ""
      position absolute
      height 15px
      width 15px
      // left 4px
      left 2.5px
      // bottom 4px
      top 0
      bottom 0
      margin auto
      box-shadow 0 2px 3px 0 rgba(0, 0, 0, 0.05) inset
      border-radius 50%
      background-color var(--light)
      @extend .transition