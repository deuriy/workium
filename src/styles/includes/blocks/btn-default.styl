.btn-default
	display inline-flex
	justify-content center
	padding 14px 32px
	border none
	outline none
	border-radius 12px
	font-weight 500
	font-size 16px
	line-height 1.625
	font-family var(--base-font)
	background var(--info)
	color var(--light)
	white-space nowrap
	cursor pointer
	text-decoration none
	@extend .transition
	
	&--user-settings
		padding 11px 80px
		border-radius 6px
	
	&--login
		padding 12px 32px
		border-radius 12px
		font-size 15px
		line-height 1.6
	
	&--withdrawal-form
		padding 11px 80px
		border-radius 5px
	
	&--fancybox-popup
		padding 10px 25px
		border-radius 4px
	
	&--arrow
		display inline-grid
		grid-template-columns 1fr auto
		gap 15px
		align-items center
		padding 12px 28px
		font-weight 600
		line-height 1.5
		
		@media $smMinus
			font-size 15px
		
		@media $xs
			gap 8px
			padding-right 15px
			padding-left 15px
			font-size 14px
		
		&::after
			content ""
			position relative
			left 0
			width 14px
			height 14px
			background url("data:image/svg+xml,%3Csvg viewBox='0 0 14 14' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M0.75 7H13.25M13.25 7L7.625 1.375M13.25 7L7.625 12.625' stroke='%23fff' stroke-width='1.4' stroke-linecap='round' stroke-linejoin='round'/%3E%3C/svg%3E%0A") center / cover no-repeat
			@extend .transition
		
		&:hover
			&::after
				left 5px
	
	&--filter
		padding 0.6875em 2.375em
		font-weight 600
		font-family var(--graphik-lcg)
	
	&--closed-section
		padding 12px 32px
		font-size 15px