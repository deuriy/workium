.achievement
	width 218px
	
	@media $smMinus
		width 186px
		
	@media $xs
		width 154px
	
	&__icon
		margin-bottom 16px
		display grid
		place-content center
		height 218px
		// padding 20px
		border-radius 16px
		background var(--light)
		
		@media $smMinus
			height 186px
		
		@media $xs
			height 154px
	
	&__icon-img
		max-width 120px
		
		@media $smMinus
			max-width 95px
			
		@media $xs
			max-width 72px
	
	&__name
		font-weight 500
		text-align center
		color var(--text-color)