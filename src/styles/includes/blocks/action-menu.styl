.action-menu
	&__list
		list-style none
	
	&__item,
	&__link
		color var(--accent)
	
	&__link
		display grid
		grid-template-columns auto 1fr
		align-items center
		gap 20px
		padding 16px 0
		font-size 16px
		text-decoration none
		
		& > .svgico
			width 20px
			color #4B97F9
		
		&--success
			color #81BE1F
			
			& > .svgico
				color #81BE1F