.status-line
	position relative
	// width 880px
	// max-width 100%
	min-height 41px
	
	&__line
		// content ""
		// position absolute
		width 100%
		height 6px
		border-radius 6px
		background var(--grey-medium)
	
	&__line-fill
		width 0
		height 100%
		// background var(--info)
		border-radius 6px
		background linear-gradient(90deg, #5340FF 0%, #40A0FF 100%)
		// border-top-left-radius 6px
		// border-bottom-left-radius 6px
		@extend .transition
		
		// &--rounded
		// 	border-top-right-radius 6px
		// 	border-bottom-right-radius 6px
	
	&__item
		position absolute
		top 0
		// top -5px
		// color var(--grey-medium)
		font-size 13px
		line-height 1.6923
		
		&::before
			content ""
			display block
			top -16px
			width 2px
			height 6px
			// margin-bottom 4px
			margin-bottom 8px
			background var(--light)
			// border 2px solid var(--light)
			// background var(--grey-medium)
		
		&:first-child
			&::before
				background transparent
		
		&--booked,
		&--taken-to-work
			left 0
		
		&--left,
		&--working,
		&--paperwork,
		&--worked-out
			.status-line__item-text
				position relative
				right calc(50% - 6px)
		
		&--left
			left calc(20% - 4px)
			
		&--paperwork
			left calc(40% - 4px)
		
		&--working
			left calc(60% - 6px)
		
		&--worked-out
			left calc(80% - 8px)
			
		&--payment
			left calc(100% - 10px)
			
			.status-line__item-text
				position relative
				// right calc(100% - 10px)
				right calc(100% - 1px)
		
		&--for-processing
			left 25%
		
		&--ready
			left 50%
		
		&--sent
			left 75%
		
		&--payment
			left 100%
	
	&--grey-bg
		.status-line__line-fill
			// background linear-gradient(90deg, #a4a9d2 0%, #5b5e84 100%)
			background linear-gradient(90deg, #5b5e84 0%, #a4a9d2 100%)
			
	&--aqua-bg
		.status-line__line-fill
			background linear-gradient(90deg, #1a6aa7 0%, #79cbde 100%)
			
	&--beige-bg
		.status-line__line-fill
			background linear-gradient(90deg, #cb6a1b 0%, #e6cc92 100%)
	
	&--green-bg
		.status-line__line-fill
			// background var(--success)
			// background linear-gradient(90deg, #1EB300 0%, #7ACC29 100%)
			// border-top-right-radius 6px
			// border-bottom-right-radius 6px
			// background linear-gradient(90deg, #1EB300 0%, #7ACC29 100%)
			background linear-gradient(90deg, #00a422 0%, #93d323 100%)
			
	&--lilac-bg
		.status-line__line-fill
			background linear-gradient(90deg, #6248cf 0%, #819cff 100%)
		
		// .status-line__item--highlighted
		// 	color var(--success)
			
		// 	&::before
		// 		background var(--success)
	
	&--vertical
		display grid
		grid-template-columns auto 1fr
		
		.status-line__line
			display grid
			grid-template-columns 100%
			align-items end
			position static
			// width 2px
			width 4px
			height calc(100% - 16px)
			margin-top 6px
			// height 100%
			
		.status-line__line-fill
			width 100%
			height 0
			background linear-gradient(0deg, #5340FF 0%, #40A0FF 100%)
			// border-top-right-radius 6px
			// border-bottom-right-radius 0
			// border-bottom-left-radius 0
			
			// &--rounded
			// 	border-bottom-right-radius 6px
			// 	border-bottom-left-radius 6px
		
		.status-line__items
			display grid
			grid-template-columns 100%
			gap 48px
			margin-left -4px
			// margin-left -9px
			
		.status-line__item
			position static
			display grid
			grid-template-columns auto 1fr
			// align-items center
			align-items center
			gap 17px
			// gap 21px
			// gap 10px
			// margin-left -6px
			
			&::before
				// width 16px
				// height 16px
				width 4px
				height 2px
				margin-bottom 2px
				// margin-bottom 0
				background var(--light)
			
			&:first-child::before
				// display none
				background transparent
			
			&:last-child::before
				background transparent
			
			&--left,
			&--working,
			&--paperwork,
			&--worked-out,
			&--payment
				.status-line__item-text
					position relative
					right 0
		
		.status-line__item-text
			font-size 16px
			line-height 1.625
		
		&.status-line--grey-bg
			.status-line__line-fill
				background linear-gradient(0deg, #5b5e84 0%, #a4a9d2 100%)
				
		&.status-line--aqua-bg
			.status-line__line-fill
				background linear-gradient(0deg, #1a6aa7 0%, #79cbde 100%)
				
		&.status-line--beige-bg
			.status-line__line-fill
				background linear-gradient(0deg, #cb6a1b 0%, #e6cc92 100%)
		
		&.status-line--green-bg
			.status-line__line-fill
				background linear-gradient(0deg, #00a422 0%, #93d323 100%)
		
		&.status-line--lilac-bg
			.status-line__line-fill
				background linear-gradient(0deg, #6248cf 0%, #819cff 100%)
	
