.status-line
	position relative
	min-height 41px
	
	&__line
		content ""
		position absolute
		width 100%
		height 3px
		background var(--grey-medium)
	
	&__line-fill
		width 0
		height 100%
		background var(--info)
		@extend .transition
	
	&__item
		position absolute
		top -5px
		color var(--grey-medium)
		font-size 13px
		line-height 1.6923
		
		&::before
			content ""
			display block
			top -16px
			width 8px
			height 8px
			margin-bottom 4px
			border 2px solid var(--light)
			border-radius 50%
			background var(--grey-medium)
		
		&--highlighted
			color var(--info)
			
			&::before
				background var(--info)
		
		&--booked
			left 0
		
		&--left,
		&--working,
		&--paperwork,
		&--worked-out
			.status-line__item-text
				position relative
				right calc(50% - 6px)
		
		&--left
			left calc(20% - 4px)
			
		&--paperwork
			left calc(40% - 4px)
		
		&--working
			left calc(60% - 6px)
		
		&--worked-out
			left calc(80% - 8px)
			
		&--payment
			left calc(100% - 10px)
			
			.status-line__item-text
				position relative
				right calc(100% - 10px)
	
	&--full
		.status-line__line-fill
			background var(--success)
		
		.status-line__item--highlighted
			color var(--success)
			
			&::before
				background var(--success)
	
	&--vertical
		display grid
		grid-template-columns auto 1fr
		
		.status-line__line
			position static
			width 2px
			height calc(100% - 16px)
			margin-top 6px
			// height 100%
			
		.status-line__line-fill
			width 100%
			height 0
		
		.status-line__items
			display grid
			grid-template-columns 100%
			gap 48px
			margin-left -9px
			
		.status-line__item
			position static
			display grid
			grid-template-columns auto 1fr
			align-items center
			gap 10px
			// margin-left -6px
			
			&::before
				width 16px
				height 16px
				margin-bottom 0
			
			&--left,
			&--working,
			&--paperwork,
			&--worked-out,
			&--payment
				.status-line__item-text
					position relative
					right 0
		
		.status-line__item-text
			font-size 16px
			line-height 1.625

