.page-header	
	&__img-wrapper
		padding 34px 0 7px
		border-top-right-radius 8px
		border-top-left-radius 8px
		background #ECEEFA
		text-align center
		
		@media $1440-
			padding 20px 0 5px
	
	&__img
		vertical-align middle
		
		@media $1440-
			max-height 280px
		
		@media $mdMinus
			max-height 240px
		
		@media $xs
			max-height 200px
	
	&__text-wrapper
		padding 50px 30px 46px
		border-bottom-right-radius 8px
		border-bottom-left-radius 8px
		background var(--light)
		text-align center
		
		@media $1440-
			padding 40px 20px
		
		@media $mdMinus
			padding 25px 15px
	
	&__title
		margin-bottom 40px
		font-weight 600
		font-size 20px
		line-height normal
		
		@media $1440-
			margin-bottom 25px
			font-size 19px
		
		@media $smMinus
			font-size 18px
		
		@media $xs
			margin-bottom 20px
			font-size 17px
	
	&__text
		font-weight 500
		font-size 16px
		
		@media $1440-
			font-size 15px