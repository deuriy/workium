.vacancies
	&__header
		// margin-bottom 32px
		display grid
		grid-template-columns repeat(2, auto)
		justify-content start
		align-items center
		gap 26px
		margin-bottom 20px
		
		@media $xs
			margin-bottom 3px
		
		@media $xxs
			grid-template-columns 100%
			gap 15px
	
	&__title-wrapper
		display grid
		grid-template-columns repeat(2, auto)
		justify-content start
		align-items start
		gap 5px
	
	&__count
		margin-top -3px
		font-size 14px
	
	&__filter
		// margin-bottom 40px
		margin-bottom 28px
		
		@media $md
			position sticky
			// position fixed
			// z-index 100
			z-index 1
			top 0
			// top 84px
		
		@media $xxs
			margin-bottom 4px
	
	&__cards
		@media $xs
			margin-right -17px
			margin-left -17px