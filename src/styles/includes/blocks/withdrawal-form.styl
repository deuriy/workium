.withdrawal-form
	width 900px
	max-width 100%
	
	&__title
		margin-bottom 20px
		font-weight 500
		font-size 15px
		color #575D69
		
		@media $xs
			margin-bottom 15px
			font-size 16px
			line-height 1.625
	
	&__fields
		display grid
		grid-template-columns 100%
		gap 50px
		
		@media $xs
			gap 17px
	
	&__row
		display grid
		// grid-template-columns repeat(2, 1fr)
		// grid-template-columns repeat(2, 1fr)
		// grid-template-columns 1fr repeat(2, 0.42fr)
		grid-template-columns 1fr 1.3fr
		gap 23px
		// width 785px
		// width 746px
		max-width 100%
		
		@media $xs
			grid-template-columns 100%
			gap 17px
	
	&__name-and-surname
		display grid
		grid-template-columns repeat(2, auto)
		gap 23px
		justify-content start
		
		@media $xs
			grid-template-columns 100%
			gap 17px
	
	&__item
		&--name,
		&--surname
			@media $smPlus
				// max-width 160px
				max-width 170px
	
	&__label
		display block
		margin-bottom 3px
		font-size 13px
		color #777C86
		cursor pointer
		
		@media $smPlus
			padding-left 6px
		
		@media $xs
			font-size 15px
			line-height 1.6
		
		&--large
			margin-bottom 11px
			padding-left 0
			font-size 15px
			
			@media $xs
				margin-bottom 4px
	
	&__control
		display grid
		grid-template-columns auto auto
		align-items center
		gap 13px
		
		&--amount
			grid-template-columns 215px auto
			
			@media $xs
				position relative
				grid-template-columns 100%
				
				.withdrawal-form__form-text
					padding-right 60px
				
				.withdrawal-form__field-suffix
					position absolute
					top 11px
					right 13px
					font-size 16px
					line-height 1.625
	
	&__field-suffix
		font-size 14px
	
	&__field-note
		margin-top 8px
		color #777C86
		font-weight 400
		font-size 13px
		line-height 18px
		
		@media $smPlus
			margin-left 5px
		
		@media $xs
			margin-top 6px
	
	&__field-note-link
		color #777C86
		
		&:hover
			text-decoration none
	
	&__max-amount
		color #5340FF
		
		&:hover
			text-decoration none
	
	&__notice
		margin-top 33px
		
		@media $xs
			margin-top 15px
		
		@media $smPlus
			margin-left 5px
	
	&__actions
		display grid
		grid-template-columns repeat(2, auto)
		justify-content start
		align-items center
		gap 18px
		margin-top 24px
		
		@media $xs
			grid-template-columns 100%
			gap 12px
		
		@media $smPlus
			margin-left 5px