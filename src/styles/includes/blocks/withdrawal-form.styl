.withdrawal-form
	width 900px
	max-width 100%
	
	&__title
		margin-bottom 20px
		font-weight 500
		font-size 15px
		color #575D69
	
	&__fields
		display grid
		grid-template-columns 100%
		gap 50px
	
	&__row
		display grid
		// grid-template-columns repeat(2, 1fr)
		// grid-template-columns repeat(2, 1fr)
		// grid-template-columns 1fr repeat(2, 0.42fr)
		grid-template-columns 1fr 1.3fr
		gap 23px
		// width 785px
		// width 746px
		max-width 100%
	
	&__name-and-surname
		display grid
		grid-template-columns repeat(2, auto)
		gap 23px
		justify-content start
	
	&__item
		&--name,
		&--surname
			max-width 160px
	
	&__label
		display block
		margin-bottom 3px
		padding-left 6px
		font-size 13px
		color #777C86
		cursor pointer
		
		&--large
			margin-bottom 11px
			padding-left 0
			font-size 15px
	
	&__control
		display grid
		grid-template-columns auto auto
		align-items center
		gap 13px
		
		&--amount
			grid-template-columns 215px auto
	
	&__field-suffix
		font-size 14px
	
	&__field-note
		margin-top 8px
		margin-left 5px
		color #777C86
		font-weight 400
		font-size 13px
		line-height 18px
	
	&__field-note-link
		color #777C86
		
		&:hover
			text-decoration none
	
	&__max-amount
		color #5340FF
		
		&:hover
			text-decoration none
	
	&__notice
		margin-top 33px
		margin-left 5px
	
	&__actions
		display grid
		grid-template-columns repeat(2, auto)
		justify-content start
		align-items center
		gap 18px
		margin-top 24px
		margin-left 5px