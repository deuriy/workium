.influence
	display grid
	grid-template-columns 100%
	justify-items center
	width 1185px
	max-width 100%
	padding 45px 40px 25px
	background var(--light)
	border-radius 13px
	
	@media $mdMinus
		padding-top 30px
	
	@media $xs
		padding 25px
	
	&__scale
		margin-top 26px
		margin-left -20px
		
		@media $mdMinus
			margin-top 15px
			margin-left 0
	
	&__text
		margin-top 44px
		margin-left 23px
		font-weight 400
		color #3A3A3A
		
		@media $mdMinus
			margin-top 30px
			margin-left 0