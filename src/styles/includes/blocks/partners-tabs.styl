.partners-tabs
	&__header
		display grid
		grid-template-columns auto auto
		align-items center
		justify-content start
		gap 18px
		margin-bottom 23px
		
		@media $mdMinus
			grid-template-columns 100%
		
		@media $xs
			// gap 15px
			gap 11px
			// margin-bottom 20px
			margin-bottom 10px
	
	&__title
		font-weight 500
		font-size 22px
		line-height normal
		
		@media $smMinus
			font-size 20px
		
		// @media $xs
		// 	font-size 18px
	
	&__tabs-menu
		@media $xs
			margin-right -17px
			margin-left -17px