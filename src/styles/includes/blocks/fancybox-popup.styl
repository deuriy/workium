.fancybox-popup
	width 100%
	padding 16px
	border-top-right-radius 10px
	border-top-left-radius 10px
	
	&__title
		margin-bottom 16px
		padding-right 24px
		font-size 24px
		line-height 1.25
	
	&__recruit-name,
	&__recruit-phone
		font-size 16px
		line-height 1.625
	
	&__recruit-name
		font-weight 600
	
	&__recruit-phone
		color var(--accent)
		text-decoration none
	
	&__recruit-info
		margin-bottom 24px
	
	&__status-line
		margin-bottom 20px
		margin-left 5px