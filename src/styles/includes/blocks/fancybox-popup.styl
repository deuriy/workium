.fancybox-popup
	@media $xs
		width 100%
		padding 16px
		border-top-right-radius 10px
		border-top-left-radius 10px
	
	@media $smPlus
		// width 460px
		width 460px
		max-width 100%
		border-radius 24px
		
	&__title
		margin-bottom 16px
		padding-right 24px
		font-size 24px
		line-height 1.25
	
	&__client-name,
	&__client-phone
		font-size 16px
		line-height 1.625
	
	&__client-name
		font-weight 600
	
	&__client-phone
		outline none
		color var(--accent)
		text-decoration none
	
	&__client-info
		margin-bottom 24px
	
	&__status-line
		margin-bottom 20px
		margin-left 2px
		// margin-left 5px
	
	&__img-wrapper
		min-height 180px
		margin-bottom 26px
		// margin-bottom 30px
	
	&__user-level-avatar
		margin-right auto
		margin-left auto
	
	&__text
		font-size 15px
		line-height normal
		
		& > p
			& + p
				margin-top 32px
	
	&__large-text-interval
		line-height 24px
		
		a
			color #5340FF
			text-decoration none
	
	&__buttons
		display grid
		grid-template-columns repeat(auto-fill, minmax(194px, auto))
		justify-content center
		gap 38px
		margin-top 42px
	
	&--guest
		text-align center
		
		.fancybox-popup__title
			margin-bottom 40px
			padding-right 0
			font-weight 500
			font-size 22px
			line-height normal
		
		@media $smPlus
			width 612px