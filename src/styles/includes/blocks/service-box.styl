.service-box
	display grid
	grid auto auto 1fr auto auto / 100%
	justify-items center
	max-width 589px
	// width 589px
	// max-width 100%
	// padding 15px 31px 25px
	padding 15px 31px 23px
	background var(--light)
	border-radius 25px
	box-shadow 0 0 20px rgba(0, 0, 0, 0.1)
	font-weight 500
	text-align center
	
	@media $1440-
		padding 10px 20px 20px
	
	@media $xs
		max-width 100%
		padding 10px 15px 15px
	
	&__country
		margin-bottom 22px
		justify-self end
		
		@media $1440-
			margin-bottom 15px
		
		@media $mdMinus
			margin-bottom 10px
			font-size 14px
	
	&__title
		margin-bottom 34px
		font-weight 600
		font-size 24px
		line-height normal
		
		@media $1440-
			margin-bottom 20px
			font-size 22px
		
		@media $mdMinus
			margin-bottom 18px
		
		@media $smMinus
			font-size 20px
	
	&__description
		margin-bottom 45px
		font-size 14px
		line-height normal
		color rgba(15, 24, 42, .55)
		
		@media $1440-
			margin-bottom 35px
		
		@media $mdMinus
			margin-bottom 25px
	
	&__order-btn
		// margin-bottom 25px
		margin-bottom 27px
		
		@media $1440-
			margin-bottom 20px