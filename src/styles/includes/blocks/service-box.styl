.service-box
	display grid
	grid auto auto 1fr auto auto / 100%
	justify-items center
	// max-width 589px
	max-width 598px
	// width 589px
	// max-width 100%
	// padding 15px 31px 25px
	// padding 15px 31px 23px
	padding 24px 31px 23px
	background var(--light)
	// border-radius 25px
	border-radius 16px
	box-shadow 0 0 20px rgba(0, 0, 0, 0.1)
	font-weight 500
	text-align center
	
	@media $1440-
		padding 10px 20px 20px
	
	@media $xs
		max-width 100%
		padding 16px 15px
	
	&__country
		// margin-bottom 22px
		margin-bottom 8px
		justify-self end
		padding 4px 7px
		border-radius 8px
		background #F0F4FA
		
		@media $1440-
			margin-bottom 15px
		
		@media $mdMinus
			margin-bottom 10px
			font-size 14px
	
	&__title
		// margin-bottom 34px
		margin-bottom 19px
		font-weight 600
		font-size 24px
		line-height normal
		
		@media $1440-
			margin-bottom 20px
			font-size 22px
		
		@media $mdMinus
			margin-bottom 18px
		
		@media $smMinus
			font-size 20px
		
		@media $xs
			margin-bottom 16px
			font-size 24px
			line-height 1.167
	
	&__description
		// margin-bottom 45px
		margin-bottom 20px
		font-size 14px
		line-height 1.428571428571429
		// line-height normal
		color rgba(15, 24, 42, .55)
		
		@media $1440-
			margin-bottom 35px
		
		@media $mdMinus
			margin-bottom 25px
		
		@media $xs
			margin-bottom 16px
	
	&__hint
		margin-bottom 5px
		
	&__cashback
		margin-bottom 23px
	
	&__order-btn
		@media $xs
			width 100%
