.mobile-user-profile
	// position fixed
	// z-index 100
	// top 0
	// left 0
	// width 100%
	// height 100%
	background #101728
	color var(--light)
	
	&__title
		margin-bottom 4px
		font-weight 500
	
	&__avatar
		margin 0 auto 5px
	
	&__user-info
		text-align center
	
	&__username
		margin-left 5px
		font-size 18px
		
		&--online
			display grid
			grid-template-columns auto auto
			justify-content center
			
			&::after
				content ""
				width 7px
				height 7px
				border-radius 50%
				background #38CA16