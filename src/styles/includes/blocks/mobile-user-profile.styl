.mobile-user-profile
	// position fixed
	// z-index 100
	// top 0
	// left 0
	// width 100%
	// height 100%
	background #101728
	color var(--light)
	
	&__title
		margin 0 12px 4px
		font-weight 500
	
	&__avatar
		// margin 0 auto 5px
		margin 0 auto 2px
	
	&__user-info
		text-align center
	
	&__username
		margin-bottom 1px
		margin-left 5px
		font-size 18px
		line-height normal
		
		&--online
			display grid
			grid-template-columns auto auto
			justify-content center
			
			&::after
				content ""
				width 7px
				height 7px
				border-radius 50%
				background #38CA16
	
	&__id
		margin-bottom 25px
		color #797D87
		font-size 11px
	
	&__user-labels
		margin-bottom 40px