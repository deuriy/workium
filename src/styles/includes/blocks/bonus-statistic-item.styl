.bonus-statistic-item
	position relative
	display block
	color var(--accent)
	text-decoration none
	// min-width 188px
	// max-width 100%
	
	@media $smPlus
		// min-width 188px
		min-width 130px
	
	&__title
		margin-bottom 8px
	
	&__value
		display grid
		place-content center
		height 48px
		// padding-left 5px
		padding-left 15px
		background-color var(--grey-medium)
		background-position 15px center
		background-size 24px auto
		background-repeat no-repeat
		border-radius 10px
		
