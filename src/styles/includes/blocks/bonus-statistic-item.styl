.bonus-statistic-item
	min-width 188px
	// max-width 100%
	
	&__title
		margin-bottom 8px
	
	&__value
		display grid
		place-content center
		height 48px
		padding-left 5px
		background-color var(--grey-medium)
		background-position 15px center
		background-size 24px auto
		background-repeat no-repeat
		border-radius 10px
		
