.form-text
	width 100%
	height 48px
	padding-right 11px
	padding-left 11px
	border 1px solid var(--input-border-color)
	outline none
	border-radius 6px
	font-weight 500
	font-size 16px
	font-family var(--base-font)
	color var(--dark)
	@extend .transition
	
