.dropdown-block
	position relative
	z-index 10
	width 280px
	// max-width 100%
	padding 5px 7px
	border 1px solid var(--grey-medium)
	box-shadow 0 18px 36px rgba(0, 0, 0, .14)
	background var(--light)
	border-radius 7px
	opacity 0
	visibility hidden
	transform translate(-15px) scale(0.8)
	transform-origin top center
	transition all .2s ease-in-out
	
	&__copy-input
		position absolute
		clip rect(0, 0, 0, 0)
	
	&--origin-top-left
		transform-origin top left
	
	&--origin-top-right
		transform-origin top right
	
	&--origin-bottom-left
		transform-origin bottom left
	
	&--origin-bottom-right
		transform-origin bottom right
	
	&--submenu-right-bottom,
	&--top,
	&--bottom
		position absolute
	
	&--top
		top 0
		left 0
		transition none
	
	&--bottom-fixed
		position fixed
		// transition none
	
	&--visible
		opacity 1
		visibility visible
		transform none
	
	&--support
		width 410px
		padding 25px 38px 38px
	
	&--cities-select
		width auto
		padding 0
	
	&--social-groups
		width 565px
		padding 5px 14px