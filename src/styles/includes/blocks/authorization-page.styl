.authorization-page
	&__inner
		width 740px
		max-width 100%
		margin-right auto
		margin-left auto
		// padding 86px 20px
		padding 170px 20px
		
		@media $smMinus
			padding-top 86px
	
	&__title,
	&__description
		text-align center
	
	&__title
		margin-bottom 26px
		font-size 18px
	
	&__description
		margin-bottom 40px
	
	&__tabs-menu
		margin-bottom 30px
	
	&__block
		margin-bottom 28px
	
	&__form
		margin-right auto
		margin-left auto
	
	&__links
		list-style none
		display grid
		grid-template-columns repeat(2, auto)
		justify-content space-between
		width 430px
		max-width 100%
		margin-right auto
		margin-left auto
	
	&--padding-sm
		.authorization-page__inner
			padding-top 120px
			padding-bottom 120px