.tabs-menu
	@media $xs
		height 48px
		padding 6px
		background var(--grey-light)
		overflow hidden
		
	&__list
		list-style none
		display flex
		align-items center
		gap 20px
		
		@media $xs
			align-items start
			height 48px
			gap 13px
			overflow auto
	
	&__item
		font-size 14px
		line-height 1.7143
	
	&__link
		position relative
		display grid
		padding 6px 16px
		border-radius 6px
		background var(--light)
		color var(--accent)
		text-decoration none
		white-space nowrap
		@extend .transition
		
		@media $xs
			padding 6px 5px
			background transparent
		
		&:hover
			@media $smPlus
				background var(--dark)
				color var(--light)
						
		&--active
			background var(--dark)
			color var(--light)
	
	&__count
		position absolute
		top -8px
		right -8px
	
	&--grey-bg
		.tabs-menu__link:not(.tabs-menu__link--active)
			background var(--grey-light)
			
			&:hover
				background var(--dark)
				color var(--light)
	
	&--center-desktop
		@media $smPlus
			.tabs-menu__list
				justify-content center
	
	&--large
		.tabs-menu__list
			gap 16px
			
			@media $xs
				gap 8px
			
		.tabs-menu__item
			font-size 16px
			line-height 1.625
		
		.tabs-menu__link
			padding 8px 24px
			
			@media $xs
				padding 8px 12px
	
	&--rounded
		.tabs-menu__link
			border-radius 12px
	
	&--no-bg-mobile
		@media $xs
			padding 0
			background transparent
			
			.tabs-menu__list
				height 60px
	
	&--underline-style
		@media $xs
			height auto
			padding 0
			background transparent
			
		.tabs-menu__list
			justify-content center
			
			@media $xs
				height auto
				
		.tabs-menu__link
			padding-top 4px
			padding-bottom 4px
			border-bottom 3px solid transparent
			border-radius 0
			
			&:hover,
			&--active
				border-bottom-color var(--purple)
				background transparent
				color var(--accent)
			
			&--active
				font-weight 600
	
	&--operations-types
		@media $xs
			padding-right 0
			padding-left 0
			
		.tabs-menu__list
			@media $smPlus
				flex-wrap wrap
				gap 19px
			
			@media $xs
				gap 9px
				padding-right 17px
				padding-left 17px
		
		.tabs-menu__item
			@media $xs
				font-size 13px
		
		.tabs-menu__link
			@media $xs
				padding 7px 16px
				
				&:not(.tabs-menu__link--active)
					background var(--light)
					
					&:hover
						background var(--dark)
						color var(--light)
	
	&--light-bg-mob
		@media $xs
			padding-right 0
			padding-left 0
			
		.tabs-menu__link
			@media $xs
				padding 6px 16px
				background var(--light)
				color var(--accent)
			
			&:hover,
			&--active
				@media $xs
					background var(--dark)
					color var(--light)
	
	&--has-count
		@media $xs
			height 56px
		
		.tabs-menu__list
			@media $xs
				height 56px
				padding-top 8px
	
	&--withdrawal-funds,
	&--steps-section
		@media $xs
			.tabs-menu__list
				padding-right 16px
				padding-left 16px
	
	&--withdrawal-funds
		@media $xs				
			.tabs-menu__item
				font-size 15px
				line-height 1.6
			
			.tabs-menu__link
				padding 12px 16px
				border-radius 8px
				padding-right 16px
				padding-left 16px
			