.promo-block
	// width 286px
	// max-width 100%
	// padding 14px 16px
	padding 14px 16px 0
	border-radius 12px
	box-shadow 0 0 18px rgba(0, 0, 0, .11)
	background var(--light)
	@extend .transition
	
	&:hover
		// box-shadow 0 0 24px rgba(19, 31, 54, 0.25)
		box-shadow 0 0 24px rgba(19, 31, 54, 0.65)
	
	&__header
		display grid
		grid-template-columns 32px 1fr
		align-items center
		gap 12px
		margin-bottom 13px
		
	&__logo-img
		border-radius 8px
		vertical-align middle
	
	&__title
		font-weight 600
		font-size 16px
		line-height 1.625
	
	&__characteristics
		margin-bottom 17px
	
	&__salary
		margin-bottom 24px
	
	&__footer
		text-align center
	
	&__more-link
		margin-right -16px
		margin-left -16px
		border-bottom-right-radius 12px
		border-bottom-left-radius 12px
	
	&--active
		// box-shadow 0 0 18px rgba(0, 0, 0, .4)
		box-shadow 0 0 24px rgba(19, 31, 54, 0.25)
		// box-shadow 0 0 24px rgba(19, 31, 54, 0.65)
		border 3px solid var(--info)