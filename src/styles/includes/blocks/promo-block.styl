.promo-block
	width 286px
	max-width 100%
	padding 14px 16px
	border-radius 12px
	box-shadow 0 0 18px rgba(0, 0, 0, .11)
	background var(--light)
	
	&__header
		display grid
		grid-template-columns 32px 1fr
		align-items center
		gap 12px
		margin-bottom 13px
		
	&__logo-img
		border-radius 8px
		vertical-align middle
	
	&__title
		font-weight 600
		font-size 16px
		line-height 1.625
	
	&__characteristics
		margin-bottom 18px
	
	&__salary
		margin-bottom 23px
	
	&__footer
		text-align center