.promo-block
	// width 286px
	// max-width 100%
	// padding 14px 16px
	display block
	padding 14px 16px 0
	border-radius 12px
	box-shadow 0 0 18px rgba(0, 0, 0, .11)
	background var(--light)
	color var(--accent)
	text-decoration none
	@extend .transition
	
	@media $xs
		width 280px
		max-width 100%
		box-shadow 0 0 24px rgba(0, 0, 0, 0.2)
	
	&:hover
		// box-shadow 0 0 24px rgba(19, 31, 54, 0.25)
		box-shadow 0 0 24px rgba(19, 31, 54, 0.65)
	
	&__header
		margin -14px -16px 12px
		padding 12px 16px
		border-top-right-radius 12px
		border-top-left-radius 12px
		background #33B324
		color #fff
		font-weight 600
		font-size 13px
		line-height 22px
	
	&__company
		display grid
		grid-template-columns 32px 1fr
		align-items center
		gap 12px
		margin-bottom 13px
		
	&__logo-img
		border-radius 8px
		vertical-align middle
	
	&__title
		font-weight 600
		font-size 16px
		line-height 1.625
	
	&__characteristics
		margin-bottom 17px
		
		@media $xs
			margin-bottom 12px
	
	&__salary
		margin-bottom 24px
		
		@media $smMinus
			margin-bottom 15px
		
		@media $xs
			margin-bottom 18px
	
	&__footer
		text-align center
	
	&__more-link
		margin-right -16px
		margin-left -16px
		border-bottom-right-radius 12px
		border-bottom-left-radius 12px
	
	&__label
		display inline-grid
		margin-top 13px
		margin-right 26px
		padding 3px 23px
		border-radius 8px
		// background var(--info)
		background #020202
		color var(--light)
		font-size 13px
	
	&--active
		// box-shadow 0 0 18px rgba(0, 0, 0, .4)
		box-shadow 0 0 24px rgba(19, 31, 54, 0.25)
		// box-shadow 0 0 24px rgba(19, 31, 54, 0.65)
		// border 3px solid var(--info)
		border 3px solid #020202
		
		&:hover
			box-shadow 0 0 24px rgba(19, 31, 54, 0.25)
		
		.promo-block__salary
			margin-bottom 0
		
		.promo-block__footer
			margin-bottom -15px