.filter-element
	@media $xxs
		// padding 22px 16px
		padding 0 16px 30px
	
	&__header
		margin-bottom 28px
		
		&--two-col
			display grid
			grid-template-columns repeat(2, auto)
			justify-content space-between
			align-items center
			gap 20px
		
	&__title
		// margin-bottom 1em
		font-weight 600
		font-size 16px
		line-height 1.625
		
		@media $xxs
			font-size 17px
	
	&--range
		@media $xxs
			padding-right 36px
			padding-left 36px
	
	&--oplata-za-godinu,
	&--zarobitna-plata-za-misiac
		display none