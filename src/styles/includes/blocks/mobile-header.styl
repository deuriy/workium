.mobile-header
	position fixed
	z-index 10
	top 0
	right 0
	left 0
	display grid
	grid-template-columns repeat(3, auto)
	justify-content space-between
	align-items center
	height 56px
	padding 11px 17px 7px
	background var(--accent)
	
	&__support-icon
		vertical-align middle
	
	&__menu-hamburger,
	&__support-link
		margin-top -5px
	
	&__btn-back
		display grid
		grid-template-columns auto 1fr
		gap 5px
		color var(--light)
		text-decoration none
		font-size 12px
	
	&__logo
		text-align center
	
	&--light
		background var(--light)
	
	&--vacancy-page
		grid-template-columns auto 1fr auto auto
		gap 15px
		
		.mobile-header__btn-back
			margin-top -4px
			margin-left -4px