.range-slider-element
	&__items
		display grid
		grid-template-columns 1fr auto 1fr
		align-items center
		gap 4px
		margin-top 30px
	
	&__sep
		font-size 14px
		line-height 1.71429
		
	&__input
		-moz-appearance textfield

		&::-webkit-outer-spin-button,
		&::-webkit-inner-spin-button
			-webkit-appearance none
			margin 0