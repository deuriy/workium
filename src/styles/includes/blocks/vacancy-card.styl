.vacancy-card
	padding 32px 17px 32px 32px
	border 1px solid var(--grey-medium)
	border-radius 12px
	background var(--light)
	
	@media $smMinus
		padding 20px 25px
	
	@media $xs
		padding 15px
	
	&__wrapper
		padding 32px 17px 32px 32px
		border 1px solid var(--grey-medium)
		border-radius 12px
		background var(--light)
		
		@media $smMinus
			padding 20px 25px
		
		@media $xs
			padding 15px
	
	&__header
		display grid
		grid-template-columns repeat(2, auto)
		justify-content space-between
		align-items center
		gap 20px
		margin-bottom 24px
		
		@media $smMinus
			padding 20px 25px
		
		@media $xs
			grid-template-columns 100%
			gap 3px
			margin-bottom 12px
			// padding-bottom 14px
			padding 0 15px
			border-bottom 1px solid var(--grey-medium)
		
		// @media $xxs
		// 	margin-bottom 16px
	
	&__rating-and-address
		@media $smPlus
			display grid
			grid-template-columns 100%
			justify-items end
			text-align right
	
	&__address
		color var(--text-color)
		font-size 13px
		line-height 22px
	
	&__specifications
		display grid
		// grid-template-columns repeat(4, auto)
		grid-template-columns repeat(4, 1fr)
		gap 18px 32px
		justify-content start
		max-width 888px
		
		@media $smMinus
			// grid-template-columns repeat(3, auto)
			grid-template-columns repeat(3, 1fr)
			gap 24px
		
		@media $xs
			// grid-template-columns repeat(2, 1fr)
			grid-template-columns auto 1fr
			gap 17px 26px
		
		// @media $xxs
		// 	// grid-template-columns repeat(2, auto)
		// 	grid-template-columns repeat(2, 1fr)
		// 	gap 16px 31px
	
	&__specification
		&--responsibilities
			@media $smPlus
				grid-column 1 / 5
				padding-left 0
				// width 635px
				// width 820px
				// max-width 100%
				max-width 820px
			
			@media $xs
				grid-column 1 / 3
	
	&__title
		margin-bottom 18px
		font-weight 600
		font-size 24px
		line-height 1.25
		
		@media $xs
			margin-bottom 12px
			margin-left 2px
			font-size 20px
			line-height 1.3
		
		&:last-child
			margin-bottom 0
	
	&__swiper
		margin-top 20px
	
	&__promo-blocks
		margin-top 26px
		margin-bottom -76px
		margin-left -15px
		
		@media $smMinus
			margin-right -15px
		
		@media $xs
			// margin-top 2px
			margin-top 0
			margin-bottom -100px
	
	&__white-box
		min-height 483px
		background var(--light)
		
		@media $xs
			min-height 240px
	
	&__btn-wrapper
		margin 0 -17px -32px -32px
		padding 35px 0 32px
		text-align center
		background #FAFBFC
	
	&--full
		padding 0
		border none
		background transparent
		
		.vacancy-card__promo-blocks
			margin-bottom 30px
			margin-left 0