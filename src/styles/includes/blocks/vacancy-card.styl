.vacancy-card
	padding 32px 17px 32px 32px
	border 1px solid var(--grey-medium)
	border-radius 12px
	background var(--light)
	
	&__wrapper
		padding 32px 17px 32px 32px
		border 1px solid var(--grey-medium)
		border-radius 12px
		background var(--light)
	
	&__header
		display grid
		grid-template-columns repeat(2, auto)
		justify-content space-between
		align-items center
		gap 20px
		margin-bottom 24px
		
		@media $xxs
			margin-bottom 16px
	
	&__rating-and-address
		display grid
		grid-template-columns 100%
		justify-items end
	
	&__address
		color var(--text-color)
		font-size 13px
		line-height 22px
	
	&__specifications
		display grid
		grid-template-columns repeat(4, auto)
		gap 18px 32px
		justify-content start
		
		@media $smMinus
			grid-template-columns repeat(3, auto)
			gap 24px
		
		@media $xxs
			grid-template-columns repeat(2, auto)
			gap 16px 31px
	
	&__specification
		&--responsibilities
			grid-column 1 / 5
			padding-left 0
			// width 635px
			width 820px
			max-width 100%
	
	&__title
		margin-bottom 18px
		font-weight 600
		font-size 24px
		line-height 1.25
		
		&:last-child
			margin-bottom 0
	
	&__swiper
		margin-top 20px
	
	&__promo-blocks
		margin-top 26px
		margin-bottom -76px
		margin-left -15px
	
	&--full
		padding 0
		border none
		background transparent
		
		.vacancy-card__promo-blocks
			margin-bottom 30px
			margin-left 0