.tabs
	&__menu-wrapper
		display grid
		grid-template-columns repeat(2, auto)
		align-items center
		justify-content center
		gap 20px
		margin-bottom 40px
		
		@media $smMinus
			margin-bottom 30px
		
		@media $xs
			grid-template-columns 100%
			gap 0
			margin-bottom 18px
	
	&__dropdown-wrapper
		position relative
		
	&__dropdown-toggle
		@media $xs
			margin-top 6px
	
	&__dropdown-block
		position absolute
		top calc(100% + 5px)
		left 0
		
	&__content
		display none