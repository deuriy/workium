.notice
	display grid
	grid-template-columns 100%
	max-width 100%
	padding 10px 20px
	border-radius 10px
	color #B6633F
	background #FFF3EC
	
	@media $xs
		padding 12px
	
	&--withdrawal-form
		width 515px
	
	&--with-icon
		position relative
		// grid-template-columns auto 1fr
		// gap 8px
		// align-items start
		width 800px
		padding 12px 16px
		padding 12px 16px 12px 44px
		border-radius 8px
		background #FEC
		color var(--accent)
		
		&::before
			content ""
			position absolute
			width 20px
			height 20px
			// margin-top 3px
			margin-top 16px
			margin-left 16px
