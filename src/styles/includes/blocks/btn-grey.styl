.btn-grey
	display inline-flex
	justify-content center
	align-items center
	gap 3px
	padding 12px 34px
	border none
	outline none
	border-radius 5px
	font-weight 500
	font-size 15px
	line-height 1.625
	font-family var(--base-font)
	background #f2f2f5
	color var(--accent)
	white-space nowrap
	cursor pointer
	text-decoration none
	@extend .transition
	
	&--withdrawal-form,
	&--authorization-form
		@media $xs
			font-size 16px
	
	&--authorization-form
		border-radius 12px
	
	&--clear-filter
		border-radius 12px
		background #F0F4FA
		color #374151
	
	&--multi-select
		padding 6px 30px
		border-radius 8px
		font-size 14px
	
	&--mobile-filter
		border-radius 12px
		font-size 18px
		
		&:hover
			background darken(#f2f2f5, 5%)
	
	&--infoblock
		padding-right 32px
		padding-left 32px
		border-radius 12px
		font-weight 600
		background #F0F4FA
		font-size 16px
		
		&:hover
			background darken(#F0F4FA, 5%)
	
	&--employment-popup
		width 314px
		max-width 100%
		padding-right 24px
		padding-left 24px
		border-radius 12px
		background #F0F4FA
		color #989DB2
		font-weight 600
		font-size 16px
		line-height 1.5
	
	&--copy,
	&--copied,
	&--bookmark
		// width 44px
		width 48px
		// height 44px
		height 48px
		padding 11px
		border-radius 12px
		background-color #F0F4FA
		transition none
	
