.vacancy-info
	display grid
	grid-template-columns auto 1fr
	align-items center
	column-gap 16px
		
	@media $xs
		// gap 8px 12px
		gap 5px 12px
		align-items start
	
	&__logo
		grid-row 1 / 3
		
		// @media $smPlus
		// 	grid-row 1 / 3
		
		// @media $xs
		// 	grid-row 1 / 3
	
	&__logo-img
		vertical-align middle
	
	&__top
		display grid
		grid-template-columns repeat(3, auto)
		justify-content start
		align-items center
		gap 8px
		
		@media $xs
			grid-template-columns repeat(2, auto)
			align-items start
			gap 0 8px
			margin-top -3px
	
	&__tag-and-specialization
		@media $xs
			display grid
			grid-template-columns repeat(2, auto)
			align-items center
			justify-content start
			gap 8px
			grid-column 1 / 3
	
	&__company-name
		font-weight 600
		font-size 16px
		line-height 1.625
		color var(--accent)
		text-decoration none
		
		@media $xs
			white-space nowrap
			overflow hidden
			text-overflow ellipsis
	
	&__bookmark-icon
		margin-left -1px
		
		@media $xs
			grid-area 1 / 2 / 3 / 3
			margin-left 3px
	
	&__specialization
		@media $xs
			// grid-column 1 / 3
			// font-size 13px
			font-weight 300
			font-size 12px
			// line-height 22px
			line-height 15px
	
	&--full
		@media $xs
			align-items center
			gap 8px 12px
			
			.vacancy-info__top
				grid-template-columns repeat(3, auto)
				align-items center
				margin-top 0
			
			.vacancy-info__logo
				grid-row auto
				
			.vacancy-info__specialization
				grid-column 1 / 3
				font-weight 500
				font-size 13px
				line-height 22px
			
			.vacancy-info__bookmark-icon
				grid-area auto