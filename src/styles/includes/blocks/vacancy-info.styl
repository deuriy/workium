.vacancy-info
	display grid
	grid-template-columns auto 1fr
	align-items center
	column-gap 16px
		
	@media $xs
		gap 8px 12px
	
	&__logo
		@media $smPlus
			grid-row 1 / 3
	
	&__logo-img
		vertical-align middle
	
	&__top
		display grid
		grid-template-columns repeat(3, auto)
		justify-content start
		align-items center
		gap 8px
	
	&__company-name
		font-weight 600
		font-size 16px
		line-height 1.625
		color var(--accent)
		text-decoration none
	
	&__bookmark-icon
		margin-left -1px
		
		@media $xs
			margin-left 3px
	
	&__specialization
		@media $xs
			grid-column 1 / 3
			font-size 13px
			line-height 22px