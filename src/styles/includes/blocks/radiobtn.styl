.radiobtn
  position relative
  display block

  &__input
    position absolute
    clip rect(0, 0, 0, 0)

  &__input:checked ~ &__label::before
    border 8px solid #1EB200

  &__label
    position relative
    display flex
    align-items center
    gap 16px
    font-size 16px
    line-height 1.625
    font-family var(--graphik-lcg)
    cursor pointer
    
    &::before
      content ""
      box-sizing border-box
      flex-shrink 0
      width 24px
      height 24px
      border 1px solid #DFE2E6
      border-radius 50%
      background-color var(--light)
      @extend .transition