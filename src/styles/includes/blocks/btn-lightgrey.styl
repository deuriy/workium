.btn-lightgrey
	display inline-grid
	justify-content center
	align-items center
	padding 7px 27px
	border none
	outline none
	border-radius 8px
	font-weight 600
	font-size 12px
	line-height 1.625
	font-family var(--base-font)
	background var(--lightgrey)
	color var(--accent)
	white-space nowrap
	cursor pointer
	text-decoration none
	
	@media $xs
		padding 5px 16px
		font-size 11px
	
	&:hover
		background var(--purple)
		color var(--light)