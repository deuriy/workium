.authorization-form
	&__socbtns-list
		list-style none
		display grid
		grid-template-columns 100%
		gap 12px
	
	&__socbtns-item
		display grid
		grid-template-columns 100%
	
	&__sep-text
		margin-top 30px
	
	&__fields
		margin-top 30px
	
	&__field
		margin-bottom 10px
		
		&:last-child
			margin-bottom 0
	
	&__forgot-link-wrapper
		margin-top 10px
		text-align right
	
	&__link
		font-size 14px
		color var(--light-blue)
		text-decoration none
	
	&__actions
		display grid
		grid-template-columns 100%
		margin-top 20px