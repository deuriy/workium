.contact-buttons
	width 258px
	max-width 100%
	
	@media $xs
		width auto
	
	&__list
		list-style none
		display grid
		grid-template-columns 100%
		gap 16px
	
	&__item
		display grid
	
	&--row
		width auto
		max-width 100%
		
		.contact-buttons__list
			// grid-template-columns repeat(2, 260px)
			grid-template-columns repeat(2, 216px)
			justify-content space-between
			align-items center
			gap 10px
			
			@media $xs
				grid-template-columns 100%
	
	&--center
		.contact-buttons__list
			justify-content center
	
	&--text-page
		.contact-buttons__list
			gap 30px
			
			@media $smMinus
				gap 20px
			
			@media $xs
				gap 10px
	
	&--article-box
		.contact-buttons__list
			@media $md
				grid-template-columns repeat(2, 256px)
				gap 36px
	
	&--support,
	&--mobile-support
		.contact-buttons__list
			grid-template-columns repeat(2, auto)
			// gap 17px
			gap 21px
	
	&--support
		// width 198px
		// width 215px
		width 310px
	
	&--affiliate-support
		@media $xs
			margin 0
	
	&--mobile-support
		width 320px
		
		.contact-buttons__list
			justify-content start
			gap 24px
	
	&--order-service
		width 248px
		
		@media $xs
			width 328px
		
		.contact-buttons__list
			gap 12px
	
	&--contact-section
		width 100%
		
		.contact-buttons__list
			display grid
			grid-template-columns repeat(2, 258px)
			justify-content center
			gap 24px
			
			@media $xs
				gap 16px
			
			@media $xxs
				grid-template-columns 100%