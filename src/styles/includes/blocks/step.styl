.step
	width 574px
	max-width 100%
	padding 32px 32px 32px 34px
	border-radius 16px
	background var(--grey-light-gradient)
	
	@media $xs
		padding 22px 25px 26px
	
	&__title
		margin-bottom 16px
		font-size 24px
		line-height 1.25
		
		@media $xs
			margin-bottom 12px
	
	&__number
		color var(--info)
	
	&__description
		@media $xs
			font-size 16px
			line-height 1.625
		
		p + p
			margin-top 24px
			
		a
			color var(--info)
			
			&:hover
				text-decoration none