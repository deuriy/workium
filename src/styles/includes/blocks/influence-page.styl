.influence-page
	&__title
		margin-bottom 39px
		
		@media $mdMinus
			margin-bottom 25px
		
		@media $smMinus
			margin-bottom 20px
		
		@media $xs
			margin-bottom 15px
	
	&__tabs-menu
		margin-bottom 37px
		
		@media $mdMinus
			margin-bottom 25px
		
		@media $smMinus
			margin-bottom 20px
		
		@media $xs
			margin-bottom 15px
	
	&__subtitle
		margin-bottom 10px
	
	&__description
		margin-bottom 20px
		font-weight 400
		color #3A3A3A
	
	&__influence
		margin-bottom 32px
		
		@media $smMinus
			margin-bottom 25px
		
		@media $xs
			margin-bottom 20px
	
	&__text
		width 1185px
		max-width 100%
		padding 29px 60px 39px 24px
		border-radius 13px
		background var(--light)
		
		@media $mdMinus
			padding-right 24px
		
		@media $xs
			padding 20px
			border-radius 10px
		
		& > h2,
		& > h3
			margin-bottom 22px
			font-weight 700
			line-height normal
			
			@media $xs
				margin-bottom 16px
			
			&:last-child
				margin-bottom 0
		
		& > h2
			font-size 25px
			
			@media $smMinus
				font-size 22px
			
			@media $xs
				font-size 20px
		
		& > h3
			margin-top 31px
			font-size 22px
			
			@media $smMinus
				font-size 20px
			
			@media $xs
				margin-top 21px
				font-size 18px
		
		& > p
			margin-bottom 18px
			line-height normal
			
			@media $xs
				margin-bottom 15px
			
			&:last-child
				margin-bottom 0
		
		a
			color #5340FF
			text-decoration none