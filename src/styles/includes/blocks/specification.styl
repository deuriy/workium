.specification
	&__title
		color var(--grey)
		font-size 13px
		line-height 1.6923
	
	&__value
		@media $xxs
			font-size 16px
			line-height 1.625
			
		&--vacancy
			display -webkit-box
			-webkit-line-clamp 1
			-webkit-box-orient vertical
			overflow hidden
			text-overflow ellipsis
			max-width 208px
			
			@media $xs
				max-width 150px
		
		&--company
			@media $xs
				white-space nowrap
				text-overflow ellipsis
				overflow hidden
	
	&--large
		.specification__value
			font-weight 600
			font-size 16px