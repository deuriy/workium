.specification
	position relative
	display block
	text-decoration none
	
	&__title
		color var(--grey)
		font-size 13px
		line-height 1.6923
	
	&__value
		color var(--accent)
		
		br
			@media $smPlus
				display none
		
		@media $xxs
			font-size 16px
			line-height 1.625
			
