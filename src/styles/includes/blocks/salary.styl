.salary
	display grid
	grid-template-columns repeat(2, auto)
	justify-content start
	align-items end
	// gap 4px
	gap 7px
	font-size 13px
	line-height 22px
	
	@media $xs
		grid-template-columns auto 100px
		align-items center
		gap 12px
		line-height normal
		// gap 4px
		// font-size 15px
	
	&__value
		display inline-grid
		grid-template-columns 100%
		// grid-template-columns auto 1fr
		align-items center
		gap 10px
		font-weight 700
		font-size 20px
		line-height 1.3
		// font-size 16px
		
		@media $xs
			font-size 30px
			line-height 1
	
