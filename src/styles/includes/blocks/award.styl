.award
	display grid
	grid 1fr auto / 100%
	width 218px
	height 223px
	max-width 100%
	border-radius 13px
	background var(--light)
	
	@media $smMinus
		width auto
		height 186px
	
	@media $xxs
		height 170px
	
	&__icon-img
		position relative
		top 10px
		max-width 100px
		margin auto
		
		@media $smMinus
			max-width 95px
			
		@media $xs
			top 5px
			max-width 72px
	
	&__link
		margin 12px 11px
		padding 6px 0
		border-radius 8px
		background #EBE9F0
		color #3A3A3A
		text-align center
		text-decoration none
		@extend .transition
		
		@media $xs
			margin 8px 6px
			font-size 14px
		
		&:hover
			background var(--light-green)
	
