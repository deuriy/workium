.toggle-link
	display inline-grid
	grid-template-columns 1fr auto
	align-items center
	gap 6px
	text-decoration none
	color #4B97F9
	
	&::after
		content ""
		margin-top 5px
		border 3px solid transparent
		border-top-color #4B97F9
	
	&--expanded
		&::after
			margin-top -2px
			transform rotate(180deg)
	
	&--agency-fee
		color #5340FF
		font-size 14px
		line-height 1.428571428571429
		
		&::after
			border-top-color #5340FF