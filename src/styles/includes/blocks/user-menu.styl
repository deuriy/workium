.user-menu
	&__list
		list-style none
	
	&__item
		margin-bottom 8px
		
		&:last-child
			margin-bottom 0
		
	&__link
		display grid
		grid-template-columns 20px 1fr
		// grid-template-columns 15px 1fr
		align-items center
		// gap: 16px
		gap: 11px
		padding 10px 18px
		border-radius 12px
		color var(--light)
		text-decoration none
		@extend .transition
		
		&:hover,
		&--active
			background var(--accent-light)
		
		&--has-count
			grid-template-columns 20px auto auto
			justify-content start
	
	&__icon
		&--save
			margin-left 2px
	
	&__count
		margin-bottom -2px
		margin-left -3px
	
	&--mobile-profile
		.user-menu__list
			display grid
			grid-template-columns repeat(2, 1fr)
			// gap 10px 11px
			gap 13px 15px
		
		.user-menu__item
			margin-bottom 0
			// font-size 12px
			font-size 16px
			line-height 1
		
		.user-menu__link
			// gap 5px
			gap 10px
			// height 36px
			height 48px
			// padding 3px 8px 3px 11px
			padding 4px 8px 4px 19px
			border 1px solid transparent
			background var(--accent-light)
			
			&:hover,
			&--active
				background var(--black)
				border-color #5041F5
		
