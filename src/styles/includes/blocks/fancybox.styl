.fancybox
	&__slide
		padding-top 0 !important
		
		&::before,
		&::after
			display none
			
	&--popup,
	&--wide-popup,
	&--payment-systems-popup
		--fancybox-bg: rgba(0, 0, 0, 0.6)
	
		@media $xs
			.fancybox__slide
				padding 0
				justify-content end
				
				&::before,
				&::after
					display none
		
			&:not(.is-compact)
				.fancybox__slide.has-close-btn
					padding-top 0
			
		.fancybox__content
			.f-button.is-close-btn
				top 18px
				right 12px
				opacity 1
				--f-button-bg: transparent
				--f-button-hover-bg: transparent
				--f-button-color: #a9a9a9
				--f-button-hover-color: #a9a9a9
				
				// --f-button-width: 24px
				// --f-button-height: 24px
				// --f-button-svg-width: 15px
				// --f-button-svg-height: 15px
				// --f-button-border-radius: 50%
				// --f-button-bg: rgba(0, 0, 0, 0.45)
				// --f-button-hover-bg: rgba(0, 0, 0, 0.6)
				
				@media $smPlus
					// right 18px
					top 10px
					right 14px
	
	&--popup
		.fancybox__content
			@media $smPlus
				padding 1.3rem 2rem
	
	&--wide-popup
		--fancybox-bg: rgba(0, 0, 0, 0.51)
		
		.fancybox__content
			@media $smPlus
				padding 31px 20px
			
			&.fancybox-popup--add-employer
				padding 40px
	
	// &--payment-systems-popup
	// 	--fancybox-bg: rgba(0, 0, 0, 0)
		
	// 	.fancybox__content
	// 		.f-button.is-close-btn
	// 			top 11px
	
	&--user-profile-popup
		--fancybox-bg #101728
		z-index 999
		
		.fancybox__slide
			padding 0
			
			// &::before,
			// &::after
			// 	display none
		
		&:not(.is-compact)
			.fancybox__slide.has-close-btn
				padding-top 0
		
		.fancybox__content
			.f-button.is-close-btn
				--f-button-svg-width 24px
				--f-button-svg-height 24px
				--f-button-width 42px
				--f-button-height 42px
		
				top 14px
				// right 10px
				right 4px
	
	&--additional-filters-popup
		--fancybox-opacity .65
		
		.fancybox__slide.has-close-btn
			padding 0
			overflow hidden
		
		&:not(.is-compact)
			.fancybox__slide.has-close-btn
				padding-top 0
			

